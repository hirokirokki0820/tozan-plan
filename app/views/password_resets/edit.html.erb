<h1>パスワード再設定フォーム</h1>

<%= form_with(model: @user, url: password_reset_path(params[:id]), local: true) do |f| %>

  <%= hidden_field_tag :email, @user.email %>

  <div class="mb-3">
    <%= icon("key-fill") %> <%= f.label "パスワード", for: "resetPassword", class: "form-label required" %>
    <%= f.password_field :password, class: "form-control", id: "resetPassword"%>
  </div>

  <div class="mb-3">
    <%= icon("key-fill") %> <%= f.label "パスワード(確認用)", for: "resetPasswordConfirmation", class: "form-label required" %>
    <%= f.password_field :password_confirmation, class: "form-control", id: "resetPasswordConfirmation"%>
  </div>

  <div class="mb-5">
    <%= f.submit "登録する", class: "btn btn-primary" %>
    <%= link_to "キャンセル", login_path, class: "btn btn-secondary" %>
  </div>

<% end %>
