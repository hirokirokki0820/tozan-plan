<div class="mb-3">
  <h1>ログインする</h1>
  <%= link_to "新規登録はこちら>>", signup_path %>
</div>

<%= form_with(scope: :session, model: @user, url: login_path, local: true, id: "sessionForm", class: "bg-light p-3") do |f| %>

  <div class="mb-3">
    <%= icon("envelope") %> <%= f.label "Eメールアドレス", for: "sessionEmail", class: "form-label required" %>
    <%= f.email_field :email, class: "form-control", id: "sessionEmail"%>
  </div>

  <div class="mb-3">
    <%= icon("key-fill") %> <%= f.label "パスワード", for: "sessionPassword", class: "form-label required" %>
    <%= f.password_field :password, class: "form-control", id: "sessionPassword"%>
    <%= link_to "パスワードを忘れた方はこちら", new_password_reset_path %>
  </div>

  <div class="form-check mb-4">
    <%= f.check_box :remember_me, class: "form-check-input", id: "sessionCheck" ,as: :boolean %>
    <%= f.label "ログイン状態を保持する", class: "form-check-label", for: "sessionCheck" %>
  </div>

  <div class="mb-5">
    <%= f.submit "ログイン", class: "btn btn-primary" %>
    <%= link_to "キャンセル", root_path, class: "btn btn-secondary" %>
  </div>

<% end %>
